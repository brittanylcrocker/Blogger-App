<div class="row d-flex p-5">
  <div class="col-lg-6">
      <h4>Latest Comments</h4>
        <%  @article.comments.each do |comment| %>
          <div class="d-flex flex-row p-2">
            <div class="w-100">
              <h6 class="font-medium"><%= link_to "#{comment.user.username}", user_path(comment.user.id) %></h6>
                <span><%= comment.body %> </span>
                  <div class="comment-footer">
                    <span class="text-muted float-right">
                      <%= "#{comment.created_at.strftime("%b %d, %Y")}" %>
                    </span>
                  </div>
                    <%= link_to 'Delete', article_comment_path(@article, comment), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-outline-secondary" %>
                </div>
        </div>
        <% end %>

    </div>
  </div>
