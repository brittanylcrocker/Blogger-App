

<div class="all-links mb-2">
  <h1><a href="#" class="blog-header-logo text-dark center"> <%= "#{@user.blog_title}" %></a></h1>
  <h3><%= "#{@user.about_me}" %></h3>

    <% if current_user.followees.include?(@user) %>
        <h6><%= button_to "Unfollow", unfollow_user_path, method: "POST", :class => "btn btn-outline-secondary strong" %></h6>
    <% else %>
        <h6><%= button_to "Follow", follow_user_path, method: "POST", :class => "btn btn-outline-secondary strong"  %></h6>
    <% end%>
    <%= link_to 'Followers', user_path(@user) %>
    <%= link_to 'Following', unfollow_user_path(@user)%>
    <br>
</div>

<!-- Create a loop to loop through each article and display title, created date and 3 lines and thumbnail image -->
<div class="container">
<div class="row mb-2">
<% @user.articles.each do |article|%>
<!-- <div class="col-sm-6"> -->
<!-- <div class="card"> -->
  <div class="col-md-6">
<%= image_tag article.image if article.image.present?%>
    <!-- <div class="card-body"> -->
<h4><%= link_to "#{article.title}", article%></h4>
<p><%= truncate "#{article.body}", length: 100 %></p>
<p class="strong">Published:  <%= "#{article.created_at.strftime("%b %d, %Y")}" %> </p>
</div>
<% end %>
</div>
</div>
