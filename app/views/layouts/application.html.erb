<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@200&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <% if current_user.present? %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Sign Out", destroy_user_session_path, :method => 'delete', :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "New Article", new_article_path, :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "All Articles", articles_path, :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Home", user_path(current_user), :class=>"nav-link" %>
            </li>
          </ul>
          <% else %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Sign in", new_user_session_path, :class=>"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path, :class=>"nav-link"%>
            </li>
          </ul>
        <% end %>
      </nav>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
    </div>
  </body>
</html>
