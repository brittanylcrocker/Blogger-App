<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+TC:wght@200&family=Playfair+Display:wght@600&display=swap" rel="stylesheet">
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <% if current_user.present? %>
          <ul class="navbar-nav mr-auto mb-2 mt-0.5">
            <li class="nav-item m-1">
              <%= link_to "Feed", articles_path, :class=>" btn btn-outline-light" %>
            </li>
            <li class="nav-item m-1">
              <%= link_to "Home", user_path(current_user), :class=>"btn btn-outline-light" %>
            </li>
            <li class="nav-item dropdown m-1">
                <%= link_to "Article", articles_path, {:class=>"dropdown-toggle btn btn-outline-light", :id => "navbarDropdownMenuLink ", 'role'=>"button", 'data-toggle'=>"dropdown", 'aria-haspopup'=>"true", 'aria-expanded'=>"false"}%>
                  <div class="dropdown-menu">
                      <%= link_to "New Article", new_article_path, :class=>" dropdown-item btn btn-outline-light" %>
                      <%= link_to "All Articles", root_path, :class=>" dropdown-item btn btn-outline-light" %>
                  </div>
            </li>

            <li class="nav-item m-1">
              <%= link_to "Account Preferences", edit_user_registration_path,:class=>"btn btn-outline-light" %>
            </li>
            <li class="nav-item m-1">
                <%= link_to "Sign Out", destroy_user_session_path, :method => 'delete', :class=>"btn btn-outline-light" %>
            </li>
          </ul>
          <% else %>
        <ul class="navbar-nav mr-auto mb-2 mt-0.5">
            <li class="nav-item m-1">
              <%= link_to "All Articles", root_path, :class=>"btn btn-outline-light" %>
            </li>
            <li class="nav-item m-1">
              <%= link_to "Sign in", new_user_session_path, :class=>"btn btn-outline-light" %>
            </li>
            <li class="nav-item m-1">
              <%= link_to "Sign Up", new_user_registration_path, :class=>"btn btn-outline-light"%>
            </li>
          </ul>
        <% end %>
      </nav>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       <div class="yield-container">
    <%= yield %>
    </div>
    </div>
  </body>
</html>
