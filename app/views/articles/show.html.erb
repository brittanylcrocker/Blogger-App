<div class="container">
  <div class="mb-3">
<h1><%= @article.title %></h1>
<p>By <%= link_to @article.user.username, user_path(@article.user.id) %></p>
<h6><%= @article.topic %></h6>
</div>
  <div class="row p-3">
<%= image_tag @article.image, :class => 'feature mb-3', :alt => @article.title if @article.image.present?%>
<p><%= @article.body %></p>

<div class="controls">

<div class="d-inline-block">
  <%= button_to "Edit", edit_article_path(@article), :class => " btn btn-outline-secondary"%>
  </div>
  <div class="d-inline-block">
  <%= button_to "Delete", @article, :method => 'delete', :data => { :confrim => 'Are you sure?' }, :class => "btn btn-outline-secondary" %>
  </div>
</div>
</div>



<h2>Comments</h2>
<%= render :partial => 'comments/comment' %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
